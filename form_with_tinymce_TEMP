import React, { useState } from "react";
import "antd/dist/antd.css";
import "./index.css";
import { Button, Form, Input, Select } from "antd";
import { Editor } from "@tinymce/tinymce-react";

const { Option } = Select;

const App = () => {
  const [conditionalReq, setConditionalReq] = useState(true);

  const onFinish = (values) => {
    console.log("Success:", values);
    console.log(values.tinymcevalue?.level.content || null);
  };

  const onFinishFailed = (errorInfo) => {
    console.log("Failed:", errorInfo);
  };

  return (
    <Form
      name="basic"
      labelCol={{
        span: 8
      }}
      wrapperCol={{
        span: 16
      }}
      initialValues={{
        select: "Prescription"
      }}
      onFinish={onFinish}
      onFinishFailed={onFinishFailed}
      autoComplete="off"
    >
      <Form.Item label="Plain Text">
        <span className="ant-form-text">China</span>
      </Form.Item>

      <Form.Item
        name="select"
        label="Select"
        hasFeedback
        rules={[
          {
            required: true,
            message: "Please select your country!"
          }
        ]}
      >
        <Select placeholder="File type" defaultValue={"Prescription"} onChange={(value)=>{value === "Prescription" ? setConditionalReq(true) : setConditionalReq(false)}}>
          <Option value="Prescription">Prescription</Option>
          <Option value="HealthCheck">Health check</Option>
          <Option value="Report">Report</Option>
        </Select>
      </Form.Item>

      <Form.Item
        label="Username"
        name="username"
        rules={[
          {
            required: conditionalReq,
            message: "Please input your username!"
          }
        ]}
      >
        <Input />
      </Form.Item>

      <Form.Item
        label="Password"
        name="password"
        rules={[
          {
            required: conditionalReq,
            message: "Please input your password!"
          }
        ]}
      >
        <Input />
      </Form.Item>

      <Form.Item
        name="tinymcevalue"
        valuePropName="tinymcevalue"
        wrapperCol={{
          offset: 8,
          span: 16
        }}
        rules={[
          {
            required: true,
            message: "Please input some text!"
          }
        ]}
      >
        <Editor
          apiKey={"qagffr3pkuv17a8on1afax661irst1hbr4e6tbv888sz91jc"}
          init={{
            menubar: false,
            plugins: "link image code autoresize lists",
            toolbar:
              "undo redo | formatselect | bold italic backcolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | help"
          }}
          initialValue="<p>This is the initial content of the editor.</p>"
        />
      </Form.Item>

      <Form.Item
        wrapperCol={{
          offset: 8,
          span: 16
        }}
      >
        <Button type="primary" htmlType="submit">
          Submit
        </Button>
      </Form.Item>
    </Form>
  );
};

export default App;
